<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Gallery"
    android:id="@+id/relative">


    <TextView
        android:layout_width="match_parent"
        android:text="Gallery"
        android:textSize="50dp"
        android:id="@+id/text10"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_height="wrap_content"/>

    <ImageView
        android:layout_width="200dp"
        android:id="@+id/image7"
        android:layout_marginTop="20dp"
        android:layout_below="@id/text10"
        android:background="@drawable/gallery1"
        android:layout_height="200dp"/>
    <TextView
        android:layout_width="200dp"
        android:layout_below="@id/image7"
        android:id="@+id/text11"
        android:text="My Girlfriend is an Alien is a fantasy series starring Wan Peng as an alien girl from the Cape Town Planet and Thassapak Hsu as the President of Future Group of Companies."
        android:layout_height="200dp"/>
    <ImageView
        android:layout_width="200dp"
        android:id="@+id/image8"
        android:background="@drawable/gallery2"
        android:layout_below="@id/text10"
        android:layout_marginTop="20dp"
        android:layout_toRightOf="@id/image7"
        android:layout_height="200dp"/>
    <TextView
        android:layout_width="200dp"
        android:layout_below="@id/image8"
        android:layout_toRightOf="@id/text11"
        android:text="Two talented disciples of respectable magical clans unit during the cultivation training and through many hardships they are together. Where they work to solve a series of murder mysteries."
        android:layout_height="200dp"/>


</RelativeLayout>