<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".About">

    <TextView
        android:layout_width="match_parent"
        android:layout_marginTop="18dp"
        android:textSize="40dp"
        android:gravity="center"
        android:id="@+id/text2"
        android:textColor="#d2b48c"
        android:text="About MX Player"
        android:layout_height="wrap_content"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_below="@id/text2">

       <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:layout_width="200dp"
            android:id="@+id/card1"
            android:layout_marginRight="80dp"
            android:layout_below="@id/text2"
            android:layout_marginTop="10dp"
            app:cardElevation="10dp"
            app:cardCornerRadius="20dp"
            android:layout_margin="10dp"
            app:cardBackgroundColor="@color/white"
            app:cardMaxElevation="12dp"
            app:cardPreventCornerOverlap="true"
            app:cardUseCompatPadding="true"
            android:layout_height="wrap_content">


            <ImageView
                android:layout_width="match_parent"
                android:id="@+id/image6"
                android:background="@drawable/mxceo"
                android:layout_below="@id/text2"
                android:layout_height="wrap_content"/>
        </androidx.cardview.widget.CardView>
        <TextView
            android:layout_width="match_parent"
            android:layout_below="@id/card1"
            android:layout_marginTop="10dp"
            android:id="@+id/text3"
            android:layout_marginLeft="10dp"
            android:text="Karan Bedi,CEO at MX Player"
            android:textStyle="bold"
            android:textSize="25dp"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/text4"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/text3"
            android:layout_marginTop="5dp"
            android:text="A successful and passionate businessman, Karan Bedi has made a strong presence in the Indian entertainment industry through his diverse experience in the digital world. Karan Bedi is a graduate of Stanford University in Economics. He is known for his success in transforming a utility video app into Indiaâ€™s second-largest OTT in a record eight months of its launch."
            android:textSize="20dp"
            android:textStyle="normal" />

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:id="@+id/card2"
            android:layout_below="@id/text4"
            android:layout_marginTop="5dp"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="match_parent"
                android:id="@+id/image7"
                android:background="@drawable/mxvice"
                android:layout_below="@id/text4"
                android:layout_height="wrap_content"/>
        </androidx.cardview.widget.CardView>
        <TextView
            android:layout_width="match_parent"
            android:layout_below="@id/card2"
            android:layout_marginTop="10dp"
            android:id="@+id/text5"
            android:layout_marginLeft="10dp"
            android:text="Viraj Jit Singh, SVP , Head at MX Player"
            android:textStyle="bold"
            android:textSize="20dp"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/text6"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/text5"
            android:layout_marginTop="5dp"
            android:text="Viraj Jit Singh is SVP , Head - Revenue .Viraj brings with himself over 19 years of experience in sectors like broadcasting, entertainment."
            android:textSize="20dp"
            android:textStyle="normal" />
       </LinearLayout>
    </ScrollView>


</RelativeLayout>