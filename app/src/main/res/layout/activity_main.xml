<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:layout_width="match_parent"
        android:id="@+id/image2"
        android:background="@drawable/mxlogo"
        android:layout_height="wrap_content"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_marginTop="18dp"
        android:layout_below="@id/image2"
        android:textSize="58dp"
        android:gravity="center"
        android:id="@+id/text2"
        android:textColor="#9400d3"
        android:text="Welcome to MX Player!"
        android:layout_height="wrap_content"/>

    <Button
        android:layout_width="120dp"
        android:layout_marginTop="30dp"
        android:id="@+id/about"
        android:text="About Us"
        android:textSize="15dp"
        android:layout_marginLeft="5dp"
        android:layout_below="@id/text2"
        android:background="#2196F3"
        android:layout_height="100dp"/>

    <Button
        android:layout_width="120dp"
        android:layout_marginTop="30dp"
        android:id="@+id/songs"
        android:text="songs"
        android:textSize="15dp"
        android:layout_marginLeft="5dp"
        android:layout_below="@id/text2"
        android:layout_toRightOf="@id/about"
        android:background="#2196F3"
        android:layout_height="100dp"/>

    <Button
        android:layout_width="120dp"
        android:layout_marginTop="30dp"
        android:id="@+id/gallery"
        android:text="Gallery"
        android:textSize="13dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_below="@id/text2"
        android:layout_toRightOf="@id/songs"
        android:background="#2196F3"
        android:layout_height="100dp"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="15dp"
        android:layout_below="@id/songs">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"          >
            <ImageView
                android:layout_width="match_parent"
                android:background="@drawable/scroll1"
                android:id="@+id/image3"
                android:layout_height="200dp" />
            <ImageView
                android:layout_width="match_parent"
                android:layout_below="@id/image3"
                android:layout_marginTop="5dp"
                android:background="@drawable/scroll2"
                android:id="@+id/image4"
                android:layout_height="200dp" />
            <ImageView
                android:layout_width="match_parent"
                android:layout_below="@id/image4"
                android:layout_marginTop="5dp"
                android:background="@drawable/scroll3"
                android:id="@+id/image5"
                android:layout_height="200dp" />
        </RelativeLayout>
    </ScrollView>

</RelativeLayout>